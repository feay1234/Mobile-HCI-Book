<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.navigationdrawerexample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name="com.example.android.navigationdrawerexample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCMctglepmL5M8HX5muGaRUV1V0qKaSOxE" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- this is the searchable activity; it performs searches -->
        <activity android:name="com.example.android.navigationdrawerexample.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!--
             this activity enables the search dialog to initiate searches
	         in the SearchableActivity
        -->
        <activity android:name="com.example.android.navigationdrawerexample.OtherActivity" >

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchableActivity" />
        </activity>
        <activity
            android:name="com.example.android.navigationdrawerexample.SettingActivity"
            android:label="@string/title_activity_setting" >
            <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.android.navigationdrawerexample.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.navigationdrawerexample.ReadActivity"
            android:label="@string/title_activity_read" >
            <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.android.navigationdrawerexample.MainActivity" />
        </activity>
    </application>

</manifest>
